{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Instalar dependencias y ejecutar proyecto",
			"type": "shell",
			"command": "npm",
			"args": [
				"install",
				"&&",
				"npm",
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}